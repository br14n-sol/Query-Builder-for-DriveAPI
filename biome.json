{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "javascript": {
    "formatter": {
      "indentStyle": "space",
      "indentWidth": 2,
      "semicolons": "asNeeded",
      "quoteStyle": "single",
      "trailingComma": "none",
      "arrowParentheses": "asNeeded"
    }
  },
  "linter": {
    "rules": {
      "recommended": true,
      "style": {
        "useShorthandArrayType": "error"
      }
    }
  },
  "files": {
    "include": [
      "src/**/*.ts"
    ],
    "ignore": [
      "node_modules",
      "lib"
    ]
  }
}